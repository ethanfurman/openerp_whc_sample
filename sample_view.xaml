!!!xml1.0

-act_window = 'ir.actions.act_window'
-view = 'ir.ui.view'

~openerp
    ~data noupdate='0'

        ~record model=view #sample_request_form
            @name: sample.request.form
            @model: sample.request
            @arch type='xml'
                ~form $Sample_Request version='7.0' setup='onload(user_id, contact_id, partner_id, ship_to_id, lead_id, lead_company, lead_name, context)'
                    ~header
                        ~button @button_sample_submit $Submit .oe_edit_hide type='object' attrs="{'invisible': ['|',('state','!=', 'draft'),('product_ids','=',[])]}"
                        @state widget='statusbar'
                    @id invisible='1'
                    @ref_num invisible='1'
                    @partner_is_company invisible='1'
                    ~div .oe_title
                        ~h1
                            @ref_name attrs="{'invisible': [('id','=',False)]}"
                    ~group col='5'
                        ~group colspan='2'
                            @user_id readonly="1" options="{'limit':15, 'create':0, 'create_edit':0}"
                            @request_type on_change='onchange_request_type(send_to, user_id, contact_id, partner_id, request_type, lead_id, lead_company, lead_name, context)' widget='radio' writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                            @create_date readonly='1' $Created_on attrs="{'invisible': [('id','=',False)]}"
                            @partner_id on_change='onchange_partner_id(user_id, contact_id, partner_id, ship_to_id, request_type, lead_id, lead_company, lead_name, context)' options="{'limit':15, 'create':0, 'create_edit':0}" domain="['|','|',('xml_id','!=',False),('customer','=',1),('user_ids','!=',False),('module','!=','CSMSBS')]" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')" context="{'show_fis': True, 'active_test': False}" attrs="{'required': ['|',('request_type','=','customer')], 'invisible': [('request_type','!=','customer')]}"
                            @lead_id attrs="{'required': [('request_type','=','lead')], 'invisible': [('request_type','!=','lead')]}" options="{'create_edit':1}" on_change='onchange_lead_id(send_to, user_id, contact_id, partner_id, request_type, lead_id, lead_company, lead_name, context)' context="{'default_user_id': for_user_id or uid}" domain="['|', ('user_id','=',user_id), ('user_id','=',False)]" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                            @lead_company $Company attrs="{'invisible': [('request_type','!=','lead')]}" readonly='1'
                            @lead_name attrs="{'invisible': [('request_type','!=','lead')]}" readonly='1'
                            @contact_id on_change='onchange_contact_id(user_id, contact_id, partner_id, ship_to_id, request_type, lead_id, lead_company, lead_name, context)' options="{'limit':10, 'create':0, 'create_edit':1}" attrs="{'readonly': [('partner_id','=',False)], 'invisible':['|',('request_type','=','lead'),'&','&',('id','!=',False),('partner_id','!=',False),('partner_is_company','=',False)]}" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')" context="{'default_parent_id':partner_id, 'combine_company':False}"
                            @ship_to_id on_change='onchange_ship_to_id(user_id, contact_id, partner_id, ship_to_id, context)' options="{'limit':15, 'create':0, 'create_edit':1, 'no_open': True}" attrs="{'readonly': [('partner_id','=',False)], 'invisible':[('id','!=',False),('partner_id','!=',False),('partner_is_company','=',False)]}" context="{'default_ship_to_parent_id':partner_id, 'combine_company':False}" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                        ~group colspan='3'
                            @request_ship writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                            @address_type widget='radio' options="{'horizontal':1}" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                            @address $Ship_To_Address widget='text'
                            @third_party_account $Customer_Account_No writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                    ~hr
                    ~label for='product_ids'
                    @product_ids nolabel='1' context="{'tree_view_ref': 'sample.sample_product_list_full'}"
                    ~hr
                    ~group
                            @instructions writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                    ~div .oe_chatter
                        @message_follower_ids widget='mail_followers'
                        @message_ids widget='mail_thread' nolabel='1'

        ~record model=view #sample_request_list
            @name: sample.request.list
            @model: sample.request
            @arch type='xml'
                ~tree $Sample_Request
                    @create_date
                    @tree_contact
                    @tree_company
                    @user_id
                    @state

        ~record model=view #sample_search_filter
            @name: sample.request.search
            @model: sample.request
            @arch type='xml'
                ~search $Search_Sample_Request
                    @user_id $Sales_Person
                    @partner_id $Customer
                    @state $Request_Status
                    ~separator
                    ~filter $My_Requests @type_owner domain="[('user_id','=',uid)]" help="The samples I requested"
                    ~separator
                    ~filter $Draft_Requests @type_draft domain="[('state','=','draft')]"
                    ~filter $Active_Requests @type_active domain="[('state','not in',['draft','complete'])]"
                    ~filter $Complete_Requests @type_complete domain="[('state','=','complete')]"

        ~record model=act_window #sample_request_history_action
            @name: Sample Request History
            @res_model: sample.request
            @view_type: form
            @view_mode: tree,form
            @context: {'search_default_type_complete': 1}

        ~record model=act_window #sample_request_action
            @name: Sample Request
            @res_model: sample.request
            @view_type: form
            @view_mode: tree,form
            @search_view_id ref='sample_search_filter'
            @context: {'combine_company': False, 'search_default_type_owner': 1, 'search_default_type_draft': 1, 'search_default_type_active': 1}

        ~menuitem @Samples #menu_sales_sample parent='base.menu_sales' action='sample_request_action'

        ~menuitem @Samples sequence='99' parent='base.menu_base_config' groups='base.group_sale_manager' #menu_sample_config

        ~record model=view #sample_product_list_full
            @name: sample.product.list
            @model: sample.product
            @priority eval='20'
            @arch type='xml'
                ~tree $Products editable='bottom'
                    @request_state invisible='1'
                    @product_id options="{'create':false, 'create_edit':false, 'limit':15}" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                    @product_lot_requested writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                    ~button @button_same_lot_no string="â–¶" .oe_edit_only type='object' attrs="{'invisible': ['|','|',('request_state','!=','production'),('product_lot_requested','=',False),('product_lot_used','!=', False)]}"
                    @product_lot_used writeonly="groups('sample.group_sample_user,sample.group_sample_picker')"

        ~record model=view #sample_product_list
            @name: sample.product.list
            @model: sample.product
            @priority eval='10'
            @arch type='xml'
                ~tree $Products editable='bottom'
                    @product_id options="{'create':false, 'create_edit':false, 'limit':15}" writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"
                    @product_lot_requested writeonly="groups('base.group_sale_salesman,sample.group_sample_user')"

        ~menuitem @Samples #sample_main
        ~menuitem @Samples sequence='10' parent='sample_main' #sample_sub
        ~menuitem @Samples sequence='10' parent='sample_sub' action='sample_request_action' #menu_sample_sample
        ~menuitem @Customers sequence='20' parent='sample_sub' action='base.action_partner_customer_form' #menu_sample_customer
        ~menuitem @Products sequence='30' parent='sample_sub' action='product.product_normal_action' #menu_sample_product
        ~menuitem @Configuration sequence='40' parent='sample_main' #sample_sub_config

        ~report model='sample.request' name='sample.request.report' header='True' auto='True' multi='False' xml='sample/report/sample.xml' xsl='sample/report/sample.xsl' $Sample_Request #report_sample_request_form

